<div class='controls'>
  <a href='?raw'>raw</a>
  <a href='?download'>download</a>
</div>
<div class='media'>
  {{#if image}}
    <img src='{{image}}' alt='' />
  {{/if}}
  {{#if video}}
    <video controls>
      <source src='{{video}}' />
    </video>
  {{/if}}
  {{#if audio}}
    <audio controls>
      <source src='{{audio}}' />
    </audio>
  {{/if}}
</div>
