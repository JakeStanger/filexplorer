{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2018",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "lib",
    "allowJs": true,
    "lib": ["ES2020"],
    "baseUrl": "./src",
    "jsx": "react",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "lib"
  ],
  "include": [
    "src/**/*",
    "tests/**/*.spec.ts"
  ],
  "files": [
    "src/index.ts"
  ]
}
